{% if section.settings.url != blank %}
  <iframe class="iframe-section" src="{{ section.settings.url }}"></iframe>
  <style>
    .iframe-section{
        width: 100%;
        height: 100%;
        border: none;
    }  
  </style>
  
{% else %}
   <h5>Insert an URL</h5>
{% endif %}
{% schema %}
  {
    "name": "Iframe block",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "limit": 1,
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "url",
        "id": "url",
        "label": "Image Link"
      },
    ],
    "presets": [
      {
        "name": "Iframe block"
      }
    ]
  }
{% endschema %}